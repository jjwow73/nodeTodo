<div id="mainBody" class="container">
    <div class="mainForm">
        <form id="todoForm">
          <div class="form-row">
            <div class="form-group col-md-6">
                <label for="title">제목</label>
                <input type="text" class="form-control" name="title" id="title">
            </div>
            <div class="form-group col-md-2">
                <label for="priority">우선순위</label>
                <select class="form-control" name="priority" id="priority">
                        <option value="0" selected="selected"> </option>
                        <option value="1">!</option>
                        <option value="2">!!</option>
                        <option value="3">!!!</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <input class="form-check-input" type="checkbox" value="1" id="duedateCheck" onclick="toggleDate();">
                <label for="duedateCheck">마감기간</label>
                <input type="date" class="form-control" name="duedate" id="duedate"
                    min="2010-01-01" max="2020-12-31" readonly>
            </div>
            <div class="form-group col-md-12">
                <label for="content">내용</label>
                <input type="text" class="form-control" name="content" id="content">
            </div>
          </div>
          <button class="btn btn-primary" id="submitBtn" type="submit" onclick="testTodo();">제출</button>
        </form>
    </div>
    <div class="mainList row">
        <h2>할 일</h2> <hr>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>우선</th>
                    <th>제목</th>
                    <th>내용</th>
                    <th>마감</th>
                    <th>완료</th>
                    <th>삭제</th>
                </tr>
                </thead>
                <tbody id="todoList">
                <% for(var i=0; i<todos.length; i++) { var todo = todos[i]; %>
                <tr id="todoIdx(<%=todo.id%>)">
                    <td><%=todo.prior%></td>
                    <td><%=todo.title%></td>
                    <td><%=todo.content%></td>
                    <td><% if(todo.duedate == null){ %> 
                        없음
                        <% }else{ %>
                        <input type="date" class="form-control" name="showDueDate" id="showDueDate(<%= i %>)" value='' disabled>
                        <script>document.getElementById("showDueDate(<%= i %>)").value=formatDate('<%=todo.duedate %>');</script>
                        <% } %>
                    </td>
                    <td><%= todo.check %></td>
                    <td><button id="todoDelBtn(<%=todo.id%>)"class="btn btn-danger btn-delete" data-id="<%=todo.id%>">삭제</button></td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>